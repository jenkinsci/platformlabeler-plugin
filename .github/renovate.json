{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>jenkinsci/renovate-config"
  ],
  "separateMinorPatch": true,
  "packageRules": [
    {
      "description": "Only allow patch version updates to AlmaLinux, Alpine, and Rocky Dockerfiles",
      "matchDatasources": ["docker"],
      "matchFileNames": ["**/alpine/*/Dockerfile", "**/rocky/*/Dockerfile"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "description": "Only allow minor version updates to AlmaLinux Dockerfiles",
      "matchDatasources": ["docker"],
      "matchFileNames": ["**/almalinux/*/Dockerfile"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
